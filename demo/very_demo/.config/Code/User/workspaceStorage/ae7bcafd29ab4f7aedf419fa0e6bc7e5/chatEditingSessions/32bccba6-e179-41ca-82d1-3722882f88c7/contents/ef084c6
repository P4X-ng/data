#!/usr/bin/env python3
"""
RFKilla Setup - RF Warfare Toolkit with Maximum Skull Power 💀
==============================================================

Modern setuptools configuration for the ultimate RF security toolkit.
Because every serious hacker needs spinning skulls in their installs!
"""

from setuptools import setup, find_packages
import os

# Read README for long description
def read_readme():
    """Read README file for package description."""
    readme_path = os.path.join(os.path.dirname(__file__), 'README.md')
    if os.path.exists(readme_path):
        with open(readme_path, 'r', encoding='utf-8') as f:
            return f.read()
    return "RFKilla - Full Spectrum RF Defense Toolkit with Epic Spinning Skulls! 💀🌪️"

# Read requirements.txt for dependencies
def read_requirements():
    """Read requirements from requirements.txt."""
    req_path = os.path.join(os.path.dirname(__file__), 'requirements.txt')
    if os.path.exists(req_path):
        with open(req_path, 'r', encoding='utf-8') as f:
            return [
                line.strip() 
                for line in f.readlines() 
                if line.strip() and not line.startswith('#')
            ]
    return []

setup(
    name='rfkilla',
    version='2.0.0',  # Upgraded for skull power!
    description='💀 RFKilla - Full Spectrum RF Defense Toolkit with Epic Spinning Skulls! 🌪️',
    long_description=read_readme(),
    long_description_content_type='text/markdown',
    author='RF Warrior',
    author_email='skull@rfkilla.dev',
    url='https://github.com/rfwarrior/rfkilla',
    project_urls={
        'Bug Reports': 'https://github.com/rfwarrior/rfkilla/issues',
        'Source': 'https://github.com/rfwarrior/rfkilla',
        'Documentation': 'https://rfkilla.readthedocs.io/',
    },
    
    packages=find_packages(),
    python_requires='>=3.7',
    install_requires=read_requirements(),
    
    extras_require={
        'full': [
            # All optional dependencies for full skull power
            'numpy>=1.21.0',
            'scikit-learn>=1.0.0',
            'torch>=2.0.0',
            'transformers>=4.20.0',
            'psutil>=5.8.0',
            'netifaces>=0.11.0',
            'cryptography>=3.4.8',
            'pyshark>=0.4.3; platform_system!="Windows"',
            'asyncio-throttle>=1.0.0',
        ],
        'ai': [
            # LLM and AI features for smart skull decisions
            'numpy>=1.21.0',
            'torch>=2.0.0',
            'transformers>=4.20.0',
            'scikit-learn>=1.0.0',
        ],
        'advanced': [
            # Advanced networking and system monitoring
            'psutil>=5.8.0',
            'netifaces>=0.11.0',
            'cryptography>=3.4.8',
            'pyshark>=0.4.3; platform_system!="Windows"',
        ],
        'bluetooth': [
            # Enhanced Bluetooth support
            'bleak>=0.22.0',
            'asyncio-throttle>=1.0.0',
        ],
        'dev': [
            # Development and testing dependencies
            'pytest>=7.0.0',
            'pytest-cov>=4.0.0',
            'pytest-mock>=3.10.0',
            'pytest-asyncio>=0.21.0',
            'black>=23.0.0',
            'flake8>=6.0.0',
            'mypy>=1.0.0',
        ],
    },
    
    entry_points={
        'console_scripts': [
            # Main CLI entry point with skull power
            'rfkilla=rfkilla.cli:cli',
            
            # Legacy command compatibility
            'wifi-blocker=rfkilla.wifi_blocker:main',
            'bluetooth-kill=rfkilla.bluetooth_kill:main',
            'rogue-confuser=rfkilla.rogue_confuser:main',
        ],
    },
    
    include_package_data=True,
    package_data={
        'rfkilla': [
            '*.json',
            '*.yaml', 
            '*.yml',
            'data/*',
            'templates/*',
        ],
    },
    
    classifiers=[
        'Development Status :: 4 - Beta',
        'Intended Audience :: Information Technology',
        'Topic :: Security',
        'Topic :: System :: Networking',
        'License :: OSI Approved :: MIT License',
        'Programming Language :: Python :: 3',
        'Programming Language :: Python :: 3.7',
        'Programming Language :: Python :: 3.8',
        'Programming Language :: Python :: 3.9',
        'Programming Language :: Python :: 3.10',
        'Programming Language :: Python :: 3.11',
        'Programming Language :: Python :: 3.12',
        'Operating System :: OS Independent',
        'Operating System :: POSIX :: Linux',
        'Operating System :: Microsoft :: Windows',
        'Operating System :: MacOS',
        'Environment :: Console',
        'Topic :: Multimedia :: Graphics :: Presentation',  # For skull animations!
    ],
    
    keywords=[
        'wifi', 'bluetooth', 'security', 'rf', 'wireless',
        'penetration-testing', 'networking', 'monitoring',
        'skull', 'hacker', 'animation', 'terminal',  # The important stuff!
    ],
    
    zip_safe=False,  # Allow access to data files
)
