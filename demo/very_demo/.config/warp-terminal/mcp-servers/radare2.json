{
  "name": "radare2",
  "description": "Radare2 reverse engineering and binary analysis MCP server",
  "command": "/home/punk/.local/bin/r2mcp",
  "args": [],
  "env": {
    "R2_NOPROMPT": "1",
    "R2_QUIET": "0"
  },
  "capabilities": [
    "tools",
    "resources"
  ],
  "tools": [
    {
      "name": "analyze",
      "description": "Analyze a binary file with radare2",
      "parameters": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string",
            "description": "Path to the binary file to analyze"
          },
          "depth": {
            "type": "string",
            "enum": ["basic", "full", "symbols"],
            "default": "basic",
            "description": "Analysis depth level"
          }
        },
        "required": ["file"]
      }
    },
    {
      "name": "disassemble",
      "description": "Disassemble code at a specific address",
      "parameters": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "description": "Memory address to disassemble (e.g., '0x400080' or 'main')"
          },
          "count": {
            "type": "integer",
            "default": 10,
            "description": "Number of instructions to disassemble"
          }
        },
        "required": ["address"]
      }
    },
    {
      "name": "info",
      "description": "Get information about the loaded binary",
      "parameters": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["file", "symbols", "sections", "imports", "exports"],
            "default": "file",
            "description": "Type of information to retrieve"
          }
        }
      }
    },
    {
      "name": "hexdump",
      "description": "Show hexadecimal dump of memory region",
      "parameters": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "description": "Starting address for hexdump"
          },
          "length": {
            "type": "integer",
            "default": 256,
            "description": "Number of bytes to dump"
          }
        },
        "required": ["address"]
      }
    }
  ]
}
