# Mount PacketFS tools if not already available
[[ ! -d "/opt/packetfs" ]] && {
    echo "âŒ PacketFS tools not found!"
    exit 1
}

# Initialize PacketFS CLI
echo "ðŸ”§ PacketFS CLI Status:"
